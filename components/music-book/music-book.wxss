/* components/music/music.wxss */
.music-container{
  width: 100%;
  padding: 10rpx 0;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  margin-bottom: 10rpx;
}
.special-text{
  font-size: 40rpx;
  width: 135rpx;
  line-height: 135rpx;
  text-align: center;
  flex: 0 0 auto;
}
.music-rank{
  font-weight: bold;
  color: #000;
}
.music-poster{
  width: 135rpx;
  height: 135rpx;
  flex: 0 0 auto;
}
.music-info{
  width: 345rpx;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 1 1 auto;
}
.music-info text{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.music-title{
  font-size: 14px;
  font-weight: bold;
}
.music-alt-title{
  font-size: 12px;
}
.music-author{
  font-size: 12px;
  color: #4FAFE1;
}