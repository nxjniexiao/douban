/* 条目信息模板样式 */

text {
  color: #484848;
}

.item-key-value {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item-key-value .item-key {
  margin-right: 10px;
  flex: 0 0 auto;
  text-align: left;
  color: #919191;
}

.item-key-value .item-value {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
